<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MusicPlay" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Делает так, чтобы обычные Button уважали android:background -->
        <item name="buttonStyle">@style/Widget.MusicPlay.Button</item>
        <item name="android:buttonStyle">@style/Widget.MusicPlay.Button</item>
        <item name="materialButtonStyle">@style/Widget.MusicPlay.MaterialButton</item>
    </style>

    <style name="Theme.MusicPlay" parent="Base.Theme.MusicPlay" />

    <style name="Theme.AppCompat.Fullscreen" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/Widget.Theme.AppCompat.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.MusicPlay.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Widget.MusicPlay.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.MusicPlay.MaterialButton" parent="@style/Widget.Material3.Button">
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>
